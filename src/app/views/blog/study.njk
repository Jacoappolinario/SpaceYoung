{% extends "blog/layout.njk" %}

{% block content %}

<form class="form-study" method="POST" action="/study">
    <h3>Gostaria de Receber Estudos Biblicos?</h3>
    
    <div class="item">
        <div>Nome</div>
        <div>
            <input 
            type="text" 
            name="name">
        </div>
    </div>
    <div class="grid-form">
        <div class="item">
            <div>Email</div>
            <div>
                <input 
                type="text" 
                name="email">
            </div>
        </div>

        <div class="item">
            <div>Telefone (Fixo ou Movel)</div>
            <div>
                <input 
                type="text" 
                name="phone">
            </div>
        </div>

    
        <div class="item">
            <div>Cidade</div>
            <div>
                <input 
                type="text" 
                name="city">
            </div>
        </div>

        <div class="item">
            <div>UF</div>
            <div>
                <input 
                type="text" 
                name="uf">
            </div>
        </div>
    </div>
    <div class="button-form">
        <button type="submit">Enviar</button>
    </div>
</form>

{% endblock content %}