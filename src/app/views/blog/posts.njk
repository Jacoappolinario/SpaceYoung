{% extends "blog/layout.njk" %}

{% block content %}

<div class="posts">
<section class="cards">
    {% for post in posts %}
    <div class="card" id="{{ post.id }}">
        <div class="card__image-container">
            <img src="{{ post.image }}" alt="">
        </div>

        <div class="card__title">
            <p>{{ post.title }}</p>
        </div>

        <div class="card__author">
            <p>{{ post.author }}</p>
        </div>
    </div>
    {% endfor %}
</section>
</div>


{% endblock content %}